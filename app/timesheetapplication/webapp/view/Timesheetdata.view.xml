<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="timesheetapplication.controller.Timesheetdata"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="pageid"
        showFooter="true"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button
                        icon="sap-icon://home"
                        press="onHomePress"
                        tooltip="Home"
                        text="Home"
                        type="Emphasized"
                    />
                </contentLeft>
                <contentMiddle>
                    <Label
                        text="Time Sheet"
                        design="Bold"
                    />
                </contentMiddle>
                <contentRight>
                    <Title
                        text=""
                        id="FullName"
                        level="H1"
                    />
                    <core:Icon
                        src="sap-icon://customer"
                        size="150%"
                        press="CustomerHeader"
                        decorative="false"
                        id="idUserIcon"
                        color="#0000ff"
                    >
                        <core:layoutData>
                            <FlexItemData growFactor="1" />
                        </core:layoutData>
                    </core:Icon>
                </contentRight>
            </Bar>
        </customHeader>
        <VBox>
            <!--<OverflowToolbar>-->
            <!--	<Button icon="sap-icon://home" press="onHomePress" tooltip="Home"/>-->
            <!--	<ToolbarSpacer/>-->
            <!--	<Title text="Time Sheet" level="H1" textAlign="Center" class="classtitletimesheet"/>-->
            <!--	<ToolbarSpacer/>-->
            <!--	<Title text="" id="FullName" level="H1"/>-->
            <!--	<core:Icon src="sap-icon://customer" size="150%" press="CustomerHeader" decorative="false" id="idUserIcon" color="#0000ff">-->
            <!--		<core:layoutData>-->
            <!--			<FlexItemData growFactor="1"/>-->
            <!--		</core:layoutData>-->
            <!--	</core:Icon>-->
            <!--</OverflowToolbar>-->
            <HBox
                justifyContent="SpaceBetween"
                alignItems="Center"
            >
                <Button
                    text="New Time Sheet"
                    press="oncreatenewtimesheet"
                    icon="sap-icon://add-activity"
                    tooltip="Creating new Time Sheet"
                    type="Emphasized"
                />
                <ComboBox
                    id="usersComboBox"
                    items="{/array}"
                    class="sapUiTinyMarginStart sapUiTinyMarginEnd"
                    
                >
                    <core:Item
                        text="{FullName}"
                        key="{Email}"
                    />
                </ComboBox>
            </HBox>
            <Table
                id="timesheetTable"
                backgroundDesign="Transparent"
                inset="false"
                items="{timesheetModel>/timesheetData}"
            >
                <!--<headerToolbar>-->
                <!--	<Toolbar>-->
                <!--		<Title text="Timesheets"/>-->
                <!--	</Toolbar>-->
                <!--</headerToolbar>-->
                <columns>
                    <Column>
                        <header>
                            <Label text="Name" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Period" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Status" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press="onRowPress"
                    >
                        <cells>
                            <Text text="{timesheetModel>EMPLOYEENAME}" />
                            <Text text="{timesheetModel>PERIOD}" />
                            <Text text="{timesheetModel>STATUS}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
        <footer>
            <OverflowToolbar>
                <Button
                    id="Notificationbtn"
                    icon="sap-icon://message-popup"
                    press="handleMessagePopoverPress"
                    tooltip="Show Messages"
                >
                    <customData>
                        <BadgeCustomData
                            key="Notifications"
                            value=""
                            visible="true"
                        />
                    </customData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
